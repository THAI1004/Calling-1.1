<!-- Header Start -->
<style>
    .blog-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 20px 0;
    }

    .blog-content h2,
    .blog-content h3 {
        margin-top: 24px;
        font-weight: bold;
    }

    .blog-content p {
        margin-bottom: 16px;
        color: #333;
    }
</style>
<div class="container-fluid bg-breadcrumb">
    <ul class="breadcrumb-animation">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>

    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="display-3 mb-4 wow fadeInDown" data-wow-delay="0.1s">{{blog.title}}</h3>
        <ol class="breadcrumb justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/blog">Blog</a></li>
            <li class="breadcrumb-item active text-primary">Chi tiết</li>
        </ol>
    </div>
</div>
<!-- Header End -->

<!-- Blog Detail Start -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            {{#if blog.thumbnail}}
            <div class="mb-4 text-center">
                <img src="/public{{blog.thumbnail}}" alt="{{blog.title}}" class="img-fluid rounded shadow">
            </div>
            {{/if}}

            <div class="mb-4">
                <h1 class="mb-3">{{blog.title}}</h1>
                <p class="text-muted mb-2">
                    <i class="fa fa-calendar text-primary me-2"></i> {{formatDate blog.created_at 'DD/MM/YYYY'}}
                </p>
                <p class="lead text-muted">{{blog.description}}</p>
            </div>

            <div class="blog-content mt-4" style="font-size: 16px; line-height: 1.8;">
                {{{blog.content}}} {{!-- HTML nội dung từ TinyMCE --}}
            </div>

        </div>
    </div>
</div>
<!-- Blog Detail End -->