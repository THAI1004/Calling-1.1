        <script>
            document.addEventListener('DOMContentLoaded', function() {
              const form = document.querySelector('form');
              const nameInput = document.getElementById('name');
              const emailInput = document.getElementById('email');
              const phoneInput = document.getElementById('phone');
              const projectInput = document.getElementById('project');
              const subjectInput = document.getElementById('subject');
              const messageInput = document.getElementById('message');
              const errorClass = 'error-message';
              const errorStyle = 'color: red; font-size: 0.8em; margin-top: 5px;'; // Inline style for error message
          
              function displayError(input, message) {
                  const existingError = input.nextElementSibling;
                  if (existingError && existingError.classList.contains(errorClass)) {
                      existingError.textContent = message;
                  } else {
                      const errorElement = document.createElement('div');
                      errorElement.classList.add(errorClass);
                      errorElement.textContent = message;
                      errorElement.style.cssText = errorStyle; // Apply inline style
                      input.parentNode.insertBefore(errorElement, input.nextSibling);
                  }
              }
          
              function clearError(input) {
                  const existingError = input.nextElementSibling;
                  if (existingError && existingError.classList.contains(errorClass)) {
                      existingError.remove();
                  }
              }
          
              function isValidEmail(email) {
                  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                  return emailRegex.test(email);
              }
          
              function isValidPhone(phone) {
                  return phone.trim() !== '';
              }
          
              form.addEventListener('submit', function(event) {
                  let hasError = false;
                  let firstErrorInput = null; // To store the first input with an error
          
                  // Validate Name
                  if (nameInput.value.trim() === '') {
                      displayError(nameInput, 'Please enter your name.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = nameInput;
                  } else {
                      clearError(nameInput);
                  }
          
                  // Validate Email
                  if (emailInput.value.trim() === '') {
                      displayError(emailInput, 'Please enter your email.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = emailInput;
                  } else if (!isValidEmail(emailInput.value.trim())) {
                      displayError(emailInput, 'Please enter a valid email address.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = emailInput;
                  } else {
                      clearError(emailInput);
                  }
          
                  // Validate Phone
                  if (phoneInput.value.trim() === '') {
                      displayError(phoneInput, 'Please enter your phone number.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = phoneInput;
                  } else if (!isValidPhone(phoneInput.value.trim())) {
                      displayError(phoneInput, 'Please enter a valid phone number.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = phoneInput;
                  } else {
                      clearError(phoneInput);
                  }
          
                  // Validate Project (Optional)
                  if (projectInput.value.trim() === '') {
                      displayError(projectInput, 'Please enter your project.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = projectInput;
                  } else {
                      clearError(projectInput);
                  }
          
                  // Validate Subject
                  if (subjectInput.value.trim() === '') {
                      displayError(subjectInput, 'Please enter the subject.');
                      hasError = true;
                      if (!firstErrorInput) firstErrorInput = subjectInput;
                  } else {
                      clearError(subjectInput);
                  }
                  if (hasError) {
                      event.preventDefault(); // Prevent form submission
                      if (firstErrorInput) {
                          firstErrorInput.focus(); // Focus on the first input with an error
                      }
                  } else {
                      console.log('Form submitted successfully!');
                      // form.submit(); // Uncomment this line to actually submit the form
                  }
              });
          
              // Clear error messages on input change (optional)
              nameInput.addEventListener('input', () => clearError(nameInput));
              emailInput.addEventListener('input', () => clearError(emailInput));
              phoneInput.addEventListener('input', () => clearError(phoneInput));
              projectInput.addEventListener('input', () => clearError(projectInput));
              subjectInput.addEventListener('input', () => clearError(subjectInput));
          });
              </script>